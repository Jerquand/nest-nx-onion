      ],
      "@todo-app/server/user/core/application": [
        "libs/server/user/core/application/src/index.ts"
      ],
      "@todo-app/server/user/core/domain": [
        "libs/server/user/core/domain/src/index.ts"
      ],
      "@todo-app/server/user/shell": [
        "libs/server/user/shell/src/index.ts"
      ],
      "@todo-app/server/user/infrastructure": [
        "libs/server/user/infrastructure/src/index.ts"
      ],
      "@todo-app/server/user/ui/cli": [
        "libs/server/user/ui/cli/src/index.ts"
      ],
      "@todo-app/shared/util-array": [
        "libs/shared/util-array/src/index.ts"
      ],
      "@todo-app/server/shared/infrastructure": [
        "libs/server/shared/infrastructure/src/index.ts"
