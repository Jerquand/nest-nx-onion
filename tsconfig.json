      ],
      "@todo-app/shared/util-uuid": [
        "libs/shared/util-uuid/src/index.ts"
      ],
      "@todo-app/server/eisenhower-matrix/core/application": [
        "libs/server/eisenhower-matrix/core/application/src/index.ts"
      ],
      "@todo-app/server/eisenhower-matrix/core/domain": [
        "libs/server/eisenhower-matrix/core/domain/src/index.ts"
      ],
      "@todo-app/server/eisenhower-matrix/infrastrucutre": [
        "libs/server/eisenhower-matrix/infrastrucutre/src/index.ts"
      ],
      "@todo-app/server/eisenhower-matrix/shell": [
        "libs/server/eisenhower-matrix/shell/src/index.ts"
      ],
      "@todo-app/server/eisenhower-matrix/ui/api/rest": [
        "libs/server/eisenhower-matrix/ui/api/rest/src/index.ts"
